<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

  <include layout="@layout/titieheader"
      android:visibility="gone"
      ></include>
<!--  <ImageView-->
<!--      android:layout_width="match_parent"-->
<!--      android:layout_height="@dimen/dp_60"-->
<!--      android:scaleType="centerCrop"-->
<!--      android:src="@mipmap/lalal"-->
<!--      ></ImageView>-->
  <LinearLayout
      android:paddingTop="@dimen/dp_30"
      android:background="#F2F2F2"
      android:paddingLeft="@dimen/dp_20"
      android:paddingRight="@dimen/dp_20"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="@dimen/dp_82">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      android:gravity="center_horizontal"
        >
      <ImageView
          android:layout_width="@dimen/dp_22"
          android:layout_height="@dimen/dp_22"
          android:src="@mipmap/qds"

          ></ImageView>
      <TextView
          android:layout_marginTop="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="签到"
          android:textColor="#ff000000"
          android:textSize="10sp"
          />
    </LinearLayout>

      <EditText
          android:layout_weight="1"
          android:paddingLeft="@dimen/dp_10"
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_marginRight="@dimen/dp_20"
          android:layout_width="0dp"
          android:layout_height="@dimen/dp_32"
          android:singleLine="true"
          android:textSize="14sp"
          android:hint="搜索昵称/派对/关键词"
          android:background="@drawable/dialogclose"
          ></EditText>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
      <ImageView
          android:layout_width="@dimen/dp_22"
          android:layout_height="@dimen/dp_22"
          android:src="@mipmap/hgs"

          ></ImageView>
      <TextView
          android:layout_marginTop="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="签到"
          android:textColor="#ff000000"
          android:textSize="10sp"
          />
    </LinearLayout>

  </LinearLayout>
<ImageView
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:src="@mipmap/hb"
    ></ImageView>
  <ImageView
      android:layout_marginLeft="@dimen/dp_15"
      android:layout_marginRight="@dimen/dp_15"
      android:layout_marginTop="@dimen/dp_15"
      android:layout_width="match_parent"
      android:scaleType="centerCrop"
      android:layout_height="@dimen/dp_78"
      android:src="@mipmap/sasas"
      android:layout_marginBottom="@dimen/dp_10"
      ></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:orientation="vertical">
  <com.flyco.tablayout.SlidingTabLayout
      android:layout_marginLeft="@dimen/dp_20"
      android:id="@+id/stl_fuli"
      android:layout_width="wrap_content"
      android:layout_height="45dp"
      tl:tl_indicator_corner_radius="1.5dp"
      tl:tl_indicator_height="2dp"
      tl:tl_indicator_margin_left="3dp"

      tl:tl_indicator_margin_right="3dp"
      tl:tl_textSelectColor="#000000"
      tl:tl_textUnselectColor="#afafaf"
      tl:tl_indicator_color="#FFCC00"
      tl:tl_textsize="20sp"
      />

  <com.example.myapplication.coxtexts.CustomViewPager
      android:id="@+id/vp_fuli"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:overScrollMode="never"
      android:scrollbars="none" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>